datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model UserRoles {
  id   String @id
  name String
}

model UserAsPhone {
  id                  String    @id @default(uuid())
  phone               String    @unique(map: "ValidatePhone.phone_unique")
  entry               String?
  name                String?
  refreshToken        String?
  accessKey           String?
  hashedPassword      String    @default("")
  salt                String    @default("")
  resetToken          String?
  resetTokenExpiresAt DateTime?
  roles               String    @default("[]")
}
